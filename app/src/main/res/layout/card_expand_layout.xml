<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/card_expand_inner_simple_title"
            style="@style/card.native.expand_simple_title"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="Trips"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <IconTextView
            android:id="@+id/addJourney"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="{fa-plus}"
            android:textColor="@color/appMain"
            android:textSize="25sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_tag_cloud"
        style="@style/tag_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

</LinearLayout>